%YAML 1.2
---
exclude_paths:
  - .cache
  - .github
  - .pre-commit-config.yaml
  - src/galaxy.yml
  - workflow-support/image_files.yml
  - workflow-support/ci_paths.yml
  - workflow-support/lint_paths.yml

skip_list:
  - meta-runtime[unsupported-version]
  - name[casing]
  - name[play]
  - no-changed-when
  - template-instead-of-copy
  - unnamed-task
  - var-spacing
  - yaml[line-length]

kinds:
  - playbook: "**/workflow-support/*.yml"
